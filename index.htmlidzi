<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SANTECH - Pharmacie de Garde Beni Mellal</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      margin: 0;
      background-color: #f9f9f9;
      color: #333;
    }
    header {
      background-color: #0077cc;
      color: white;
      padding: 15px;
      text-align: center;
    }
    header h1 {
      margin: 0;
    }
    .container {
      max-width: 1000px;
      margin: 20px auto;
      padding: 0 15px;
    }
    .search-bar {
      margin-bottom: 20px;
    }
    .search-bar input {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    .pharmacy-list {
      list-style: none;
      padding: 0;
    }
    .pharmacy-item {
      background: white;
      margin-bottom: 15px;
      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    .pharmacy-item h3 {
      margin: 0 0 5px 0;
      color: #0077cc;
    }
    .pharmacy-item p {
      margin: 5px 0;
    }
    .btn {
      display: inline-block;
      padding: 8px 12px;
      background-color: #0077cc;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      margin-top: 5px;
    }
    #map {
      width: 100%;
      height: 400px;
      margin-top: 20px;
      border-radius: 8px;
    }
    footer {
      text-align: center;
      padding: 15px;
      background-color: #0077cc;
      color: white;
      margin-top: 40px;
    }
    @media (max-width: 600px) {
      #map {
        height: 300px;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>SANTECH - Pharmacie de Garde Beni Mellal</h1>
  </header>
  <div class="container">
    <div class="search-bar">
      <input type="text" placeholder="Search for pharmacy or medicine...">
    </div>
    <h2>Pharmacie de Garde Aujourd'hui</h2>
    <ul class="pharmacy-list">
      <li class="pharmacy-item">
        <h3>Pharmacie Ibn Sina</h3>
        <p>Address: 123 Rue de Casablanca</p>
        <p>Phone: 06 12 34 56 78</p>
        <p>Open until: 8 AM tomorrow</p>
        <a class="btn" href="https://www.google.com/maps/search/?api=1&query=32.333,6.000" target="_blank">Get Directions</a>
      </li>
      <li class="pharmacy-item">
        <h3>Pharmacie XYZ</h3>
        <p>Address: 45 Avenue Hassan II</p>
        <p>Phone: 06 98 76 54 32</p>
        <p>Open until: 7 AM tomorrow</p>
        <a class="btn" href="https://www.google.com/maps/search/?api=1&query=32.334,6.001" target="_blank">Get Directions</a>
      </li>
    </ul>
    <div id="map"></div>
  </div>
  <footer>
    &copy; 2025 SANTECH - All Rights Reserved
  </footer>

  <!-- Google Maps JS -->
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY"></script>
  <script>
    const pharmacies = [
      {name: "Pharmacie Ibn Sina", lat: 32.333, lng: 6.000},
      {name: "Pharmacie XYZ", lat: 32.334, lng: 6.001}
    ];

    function initMap() {
      const center = {lat: 32.333, lng: 6.000};
      const map = new google.maps.Map(document.getElementById('map'), {
        zoom: 15,
        center: center
      });

      pharmacies.forEach(pharma => {
        const marker = new google.maps.Marker({
          position: {lat: pharma.lat, lng: pharma.lng},
          map: map,
          title: pharma.name
        });
      });
    }

    window.onload = initMap;
  </script>
</body>
</html>
